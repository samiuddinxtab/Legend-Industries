---
import BaseLayout from '../layouts/BaseLayout.astro';

const turnstileSiteKey = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '';
---

<BaseLayout title="Contact | LEGEND INDUSTRIES">
  <main class="mx-auto max-w-4xl px-6 py-12">
    <header class="mb-8 border-b border-slate-200 pb-5">
      <h1 class="text-2xl font-semibold text-slate-900">Contact</h1>
      <p class="mt-3 text-slate-700">Structured enquiry entry point for bulk organizational and bulk individual requirements.</p>
    </header>

    <section class="space-y-3 text-slate-800">
      <p><span class="font-medium text-slate-900">Phone:</span> 9052088880</p>
      <p><span class="font-medium text-slate-900">Email:</span> legendindustries92@gmail.com</p>
      <p>
        <span class="font-medium text-slate-900">Address:</span> H. No. 10-3-773/2, V.N. Plaza, Beside Andhra Bank, Vijaya Nagar Colony, Hyderabad â€“
        500057, Telangana, India
      </p>
      <p class="text-sm">Bulk requirement context is required for enquiry review.</p>
    </section>

    <form class="mt-8 space-y-5" method="post" action="/api/contact">

      <div class="hidden" aria-hidden="true">
        <label for="website">Website</label>
        <input id="website" name="website" type="text" tabindex="-1" autocomplete="off" />
      </div>
      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="name">Name</label>
        <input id="name" name="name" type="text" required class="w-full rounded border border-slate-300 px-3 py-2" />
      </div>

      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="organization">Organization / Requirement type</label>
        <input id="organization" name="organization" type="text" required class="w-full rounded border border-slate-300 px-3 py-2" />
      </div>

      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="phone">Phone</label>
        <input id="phone" name="phone" type="tel" required class="w-full rounded border border-slate-300 px-3 py-2" />
      </div>

      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="email">Email</label>
        <input id="email" name="email" type="email" required class="w-full rounded border border-slate-300 px-3 py-2" />
      </div>

      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="quantity">Estimated quantity range</label>
        <input id="quantity" name="quantity" type="text" required class="w-full rounded border border-slate-300 px-3 py-2" />
      </div>

      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="category">Category requirement</label>
        <input id="category" name="category" type="text" required class="w-full rounded border border-slate-300 px-3 py-2" />
      </div>

      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="branding">Customization and branding requirement</label>
        <textarea id="branding" name="branding" rows="4" required class="w-full rounded border border-slate-300 px-3 py-2"></textarea>
      </div>

      <div>
        <label class="mb-1 block text-sm font-medium text-slate-900" for="delivery">Delivery location</label>
        <input id="delivery" name="delivery" type="text" required class="w-full rounded border border-slate-300 px-3 py-2" />
      </div>


      <div class="cf-turnstile" data-sitekey={turnstileSiteKey}></div>
      <button type="submit" class="rounded bg-slate-900 px-4 py-2 text-sm font-medium text-white">Submit enquiry</button>
    </form>
    <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>
  </main>
</BaseLayout>
